# ✅ Ethereum RPC Provider (e.g. Infura, Alchemy, Ankr)
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ✅ Private Key (NEVER COMMIT THIS IN .env)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ✅ Etherscan API key (for verifying/deploying smart contracts)
ETHERSCAN_API_KEY=YourEtherscanAPIKey

# ✅ Flashbots endpoint (optional, for MEV protection)
FLASHBOTS_RELAY=https://relay.flashbots.net

# ✅ Custom chain ID (optional, for testnets or local chains)
CHAIN_ID=1  # 1 = Mainnet, 5 = Goerli, 11155111 = Sepolia, etc.